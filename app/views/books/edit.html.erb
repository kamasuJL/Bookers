<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <p class=errors><%= @book.errors.count %> errors prohibited this book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %>
<% end %>

<div>
  <span class=Show-button><%= link_to "Show", book_path(@book.id) %></span>
  <span class=Back-button><%= link_to "Back", "/books" %></span>
</div>
